            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateAttachmentLink" }
            }
          }
        },
        "responses": {
          "200": { "description": "Link updated" },
          "400": { "$ref": "#/components/responses/ValidationError" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      },
      "delete": {
        "tags": ["Attachment Links"],
        "summary": "Delete attachment link",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
