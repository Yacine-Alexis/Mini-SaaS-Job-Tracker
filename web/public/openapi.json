        "summary": "List attachment links",
        "parameters": [
          {
            "name": "applicationId",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/AttachmentLink" }
                    }
                  }
                }
              }
            }
          },
          "401": { "$ref": "#/components/responses/Unauthorized" }
        }
      },
      "post": {
        "tags": ["Attachment Links"],
        "summary": "Create attachment link",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateAttachmentLink" }
            }
          }
        },
        "responses": {
          "201": { "description": "Link created" },
          "400": { "$ref": "#/components/responses/ValidationError" },
